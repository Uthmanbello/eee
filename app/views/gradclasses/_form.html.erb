<%= form_with(model: gradclass) do |form| %>
  <% if gradclass.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(gradclass.errors.count, "error") %> prohibited this gradclass from being saved:</h2>

      <ul>
        <% gradclass.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :rc, style: "display: block" %>
    <%= form.text_field :rc %>
  </div>

  <div class="field login-field text1 padding">
    <% @semesters = Semester.all %>
    <%= form.select :semester_id, options_from_collection_for_select(@semesters, :id, :name, params[:semester_id]), { prompt: "Select Semester" }, class: "form-select input-field prompt" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
