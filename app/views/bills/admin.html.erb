<div class='login'>
  <div>
    <%= link_to root_path, class: 'white' do %>
      <i class="fa-solid fa-arrow-left fa-2x white"></i>
    <% end %>
  </div>
  <div>
    <p>ADMIN</p>
  </div>
  <div class= 'empty-div'></div>
</div>

<div class= 'budget'>
  <p class= 'text2'>LECTURERS</p>
  <%= link_to new_lecturer_path do %>
    <div class='edit-btn new-btn'>
      <div class='btn-border'>
        NEW
      </div>
    </div>
  <% end %>
</div>

<% @lecturers.each do |lecturer| %>
  <div class= 'bills'>
    <div class= 'bills-list'>
      <div class='admin-name text2'>
        <p><%= lecturer.name %></p>
      </div>

      <div class= 'edit-del-new'>
      <%= link_to edit_lecturer_path(lecturer) do %>
          <div class='edit-btn'>
            <div class='btn-border'>
              EDIT
            </div>
          </div>
        <% end %>

        <%= button_to lecturer_path(lecturer), class: 'del-btn', method: :delete do %>
          <div class='delete-btn'>
            <div class='btn-border'>
              DEL
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

